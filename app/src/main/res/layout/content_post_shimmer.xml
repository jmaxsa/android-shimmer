<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:shimmer_auto_start="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/profile_image_shimmer"
            android:layout_width="@dimen/profile_image_size"
            android:layout_height="@dimen/profile_image_size"
            android:background="@drawable/profile_image_shape_shimmer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:id="@+id/title_image_shimmer"
            android:layout_width="@dimen/title_text_width"
            android:layout_height="@dimen/text_height"
            android:background="@color/dark_gray"
            app:layout_constraintStart_toEndOf="@id/profile_image_shimmer"
            app:layout_constraintTop_toTopOf="@id/profile_image_shimmer"
            android:layout_marginTop="@dimen/default_margin_top"
            android:layout_marginStart="@dimen/default_margin_start"/>

        <View
            android:id="@+id/subtitle_image_shimmer"
            android:layout_width="@dimen/subtitle_text_width"
            android:layout_height="@dimen/text_height"
            android:background="@color/dark_gray"
            app:layout_constraintStart_toEndOf="@id/profile_image_shimmer"
            app:layout_constraintTop_toBottomOf="@id/title_image_shimmer"
            android:layout_marginTop="@dimen/default_margin_top"
            android:layout_marginStart="@dimen/default_margin_start"/>

        <View
            android:id="@+id/content_one"
            android:layout_width="@dimen/content_one_width"
            android:layout_height="@dimen/text_height"
            android:background="@color/dark_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_image_shimmer"
            android:layout_marginTop="40dp"
            android:layout_marginStart="@dimen/default_margin_start"/>

        <View
            android:id="@+id/content_two"
            android:layout_width="@dimen/content_two_width"
            android:layout_height="@dimen/text_height"
            android:background="@color/dark_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/content_one"
            android:layout_marginTop="@dimen/default_margin_top"
            android:layout_marginStart="@dimen/default_margin_start"/>

        <View
            android:id="@+id/content_three"
            android:layout_width="@dimen/content_three_width"
            android:layout_height="@dimen/text_height"
            android:background="@color/dark_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/content_two"
            android:layout_marginTop="@dimen/default_margin_top"
            android:layout_marginStart="@dimen/default_margin_start"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.facebook.shimmer.ShimmerFrameLayout>